<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>distribution</id>
	<formats>
		<format>jar</format>
	</formats>
	
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<unpack>true</unpack>
			<scope>runtime</scope>			
		</dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>${project.build.outputDirectory}</directory>			
		</fileSet>
	</fileSets>
</assembly>
